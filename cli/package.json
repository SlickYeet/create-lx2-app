{
  "name": "create-lx2-app",
  "version": "0.7.0",
  "description": "Create powerful full-stack web applications with the Lx2 stack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/slickyeet/create-lx2-app",
    "directory": "cli"
  },
  "keywords": [
    "create-lx2-app",
    "lx2-app",
    "typescript",
    "next.js",
    "tailwind"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "create-lx2-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "template",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.js",
    "format": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
    "format:check": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --check",
    "typecheck": "tsc",
    "clean": "rm -rf dist .turbo node_modules",
    "link": "pnpm run build && npm link",
    "release": "changeset version",
    "pub:beta": "pnpm run build && npm publish --tag beta",
    "pub:release": "pnpm run build && npm publish"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.4.0",
    "better-auth": "^1.2.7",
    "better-sqlite3": "^11.9.1",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "execa": "^9.5.2",
    "fs-extra": "^11.3.0",
    "gradient-string": "^3.0.0",
    "ora": "^8.2.0",
    "sort-package-json": "^3.0.0"
  },
  "devDependencies": {
    "@auth/prisma-adapter": "^2.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@payloadcms/db-sqlite": "^3.33.0",
    "@payloadcms/db-vercel-postgres": "^3.33.0",
    "@payloadcms/next": "^3.33.0",
    "@payloadcms/payload-cloud": "^3.33.0",
    "@payloadcms/richtext-lexical": "^3.33.0",
    "@prisma/client": "^6.5.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.22.0",
    "eslint-config-next": "^15.2.4",
    "graphql": "^16.10.0",
    "next": "^15.2.4",
    "next-auth": "^5.0.0-beta.25",
    "payload": "^3.33.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sharp": "^0.34.1",
    "tailwindcss": "^4.0.17",
    "tsup": "^8.4.0",
    "type-fest": "^4.37.0",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  }
}
