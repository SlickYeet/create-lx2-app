{
  "name": "create-lx2-app",
  "version": "0.11.2",
  "description": "The Most Opinionated Way to Build Next.js Apps",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/slickyeet/create-lx2-app",
    "directory": "cli"
  },
  "keywords": [
    "create-lx2-app",
    "lx2-app",
    "typescript",
    "next.js",
    "tailwind"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "create-lx2-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "template",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.js",
    "format": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --write",
    "format:check": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path ../.gitignore --ignore-unknown --no-error-on-unmatched-pattern --check",
    "typecheck": "tsc",
    "clean": "rm -rf dist .turbo node_modules",
    "link": "pnpm run build && npm link",
    "release": "changeset version",
    "pub:beta": "pnpm run build && npm publish --tag beta",
    "pub:release": "pnpm run build && npm publish"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "gradient-string": "^3.0.0",
    "ora": "^9.0.0",
    "sort-package-json": "^3.4.0"
  },
  "devDependencies": {
    "@auth/drizzle-adapter": "^1.11.1",
    "@auth/prisma-adapter": "^2.11.1",
    "@biomejs/biome": "^2.3.7",
    "@eslint/eslintrc": "^3.3.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@libsql/client": "^0.15.15",
    "@payloadcms/db-sqlite": "^3.64.0",
    "@payloadcms/db-vercel-postgres": "^3.64.0",
    "@payloadcms/next": "^3.64.0",
    "@payloadcms/payload-cloud": "^3.64.0",
    "@payloadcms/richtext-lexical": "^3.64.0",
    "@prisma/client": "^7.0.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "better-auth": "^1.4.1",
    "better-sqlite3": "^12.4.6",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.4",
    "graphql": "^16.12.0",
    "mysql2": "^3.15.3",
    "next": "^16.0.4",
    "next-auth": "^5.0.0-beta.25",
    "payload": "^3.64.0",
    "postgres": "^3.4.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "prisma": "^7.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17",
    "tsup": "^8.5.1",
    "type-fest": "^5.2.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  }
}
