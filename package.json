{
  "name": "root",
  "version": "0.0.0",
  "description": "Build modern web applications with todat's most popular tools",
  "author": {
    "name": "Lasse Lammers",
    "emial": "lasse@famlam.ca",
    "url": "https://lasse.famlam.ca"
  },
  "maintainers": [
    {
      "name": "Lasse Lammers",
      "emial": "lasse@famlam.ca",
      "url": "https://lasse.famlam.ca"
    }
  ],
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/slickyeet/create-tnt-stack"
  },
  "keywords": [
    "create-tnt-stack",
    "tnt-stack",
    "typescript",
    "next.js",
    "tailwind"
  ],
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.45",
  "scripts": {
    "dev": "turbo dev",
    "dev:cli": "turbo --filter=create-tnt-stack dev",
    "dev:web": "turbo --filter=web dev",
    "build": "turbo run build",
    "build:cli": "turbo --filter=create-tnt-stack build",
    "build:web": "turbo --filter=web build",
    "start": "turbo start",
    "start:cli": "turbo --filter=create-tnt-stack start",
    "start:web": "turbo --filter=web start",
    "lint": "turbo run lint",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "format": "turbo format && prettier --write '*.{cjs,json}' --ignore-unknown --no-error-on-unmatched-pattern",
    "format:check": "turbo format:check && prettier --check '*.{cjs,json}' --ignore-unknown --no-error-on-unmatched-pattern",
    "check": "turbo lint typecheck format:check && manypkg check",
    "typecheck": "turbo run typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "shadcn": "bun run --filter=web shadcn",
    "release": "changeset version",
    "pub:beta": "cd cli && bun run pub:beta",
    "pub:release": "cd cli && bun run pub:release"
  },
  "workspaces": [
    "cli",
    "web",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@manypkg/cli": "^0.23.0",
    "@types/eslint": "^9.6.1",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-isaacscript": "^4.0.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  }
}
